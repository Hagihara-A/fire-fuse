{
  "scripts": {
    "emu": "firebase emulators:start --project hoge",
    "prepare": "husky install",
    "test": "npm test -ws --if-present",
    "test-on-emu": "npx firebase emulators:exec 'npm test'",
    "release": "npm run release -ws --if-present"
  },
  "repository": "https://github.com/Hagihara-A/fire-fuse",
  "workspaces": [
    "firefuse",
    "firefuse-admin",
    "sample-web",
    "sample-admin"
  ],
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "firebase-tools": "^9.6.1",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "semantic-release": "^18.0.0",
    "semantic-release-monorepo": "^7.0.5",
    "typescript": "^4.4.2"
  },
  "private": true,
  "lint-staged": {
    "*.{md,json,yml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        100
      ]
    }
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git",
      "@semantic-release/changelog"
    ]
  }
}
